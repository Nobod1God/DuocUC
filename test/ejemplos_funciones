# muestra Bienvenidos a Python como resultado
def resta2(a=None, b=None):
    if a== None or b == None:
        print("Error, faltan parametros a la funcion ")
        return
    return a-b
"""resta2()"""
# muestra Error, faltan parametros a la funcion como resultado
def calculo(precio, descuento):
    return precio - (precio * descuento/100)
